@model IEnumerable<MVCRestaurantApp.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menu.Meal_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
          Picture
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Meal_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
          
            @{string url = "../Content/Images/" + item.Menu_Id + ".jpg";
            }
            <img src="@url" clas="img-responsive" style="width:150px;height:120px;border-radius:5px;"
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Order_Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Order_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Order_Id })
        </td>
    </tr>
}

</table>
